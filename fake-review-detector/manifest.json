{
  "manifest_version": 3,
  "name": "Fake Review Detector",
  "description": "Parses e-commerce reviews, calls backend /api/predict, and shows fake review probability inline.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.in/*",
    "https://www.amazon.fr/*",
    "https://www.amazon.it/*",
    "https://www.amazon.es/*",
    "https://www.amazon.co.jp/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://www.amazon.ca/*",
    "https://www.amazon.com.au/*",
    "https://www.flipkart.com/*",
    "https://flipkart.com/*",
    "https://*.flipkart.com/*",
    "https://www.myntra.com/*",
    "https://myntra.com/*",
    "https://*.myntra.com/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.in/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.it/*",
        "https://www.amazon.es/*",
        "https://www.amazon.co.jp/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.com.au/*",
        "https://www.flipkart.com/*",
        "https://flipkart.com/*",
        "https://*.flipkart.com/*",
        "https://www.myntra.com/*",
        "https://myntra.com/*",
        "https://*.myntra.com/*"
      ],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fake Review Detector"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
